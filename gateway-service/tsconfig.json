{
    "exclude": [ "./build", "test" ],
    "compilerOptions": {
        "lib": ["ES2022"],
        "types": [ "node", "express" ], 
        "target": "ES2022",   
        "moduleResolution": "node",
        //"module": "commonjs",
        "module": "commonjs",
        //this option should get node-fetch to work
        "allowSyntheticDefaultImports": true,
        "rootDir": ".", 
        "outDir": "./build", 
        "esModuleInterop": true,   
        //"traceResolution": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,                   
        "skipLibCheck": true,
        "removeComments": true  
    },
    "file": [
        "index.ts" 
    ],
}