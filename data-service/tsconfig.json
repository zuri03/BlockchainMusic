{
    "exclude": [ "./coverage", "test" ],
    "compilerOptions": {
        "types": [ "node", "express" ], 
        "target": "ES6",   
        "moduleResolution": "node",
        "module": "commonjs",
        "rootDir": ".", 
        "outDir": "./build", 
        "esModuleInterop": true,   
        "forceConsistentCasingInFileNames": true,
        "strict": true,                   
        "skipLibCheck": true,
        "removeComments": true,
        "resolveJsonModule": true,
    },
    "include": [
        "./contracts/*.sol",
        "./index.ts",
        "solc.d.ts"
    ],
    /*
    "file": [
        "index.ts" 
    ],*/
}