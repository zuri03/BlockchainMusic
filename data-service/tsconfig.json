{
    "exclude": [ "./coverage", "./build", "test", "jest.config.cjs" ],
    "compilerOptions": {
        "types": [ "node", "express" ], 
        "target": "ES6",   
        "moduleResolution": "node",
        "module": "commonjs",
        "rootDir": ".", 
        "outDir": "./build", 
        "esModuleInterop": true,   
        "forceConsistentCasingInFileNames": true,
        "strict": true,                   
        "skipLibCheck": true,
        "removeComments": true,
        "resolveJsonModule": true,
    },
    "file": [
        "index.ts" 
    ],
}